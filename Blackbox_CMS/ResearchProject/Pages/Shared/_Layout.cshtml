<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ResearchProject</title>

    <link href="~/css/bootstrap.custom.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" />
    @*<link rel="stylesheet" href="~/css/sidebars.css" />*@
</head>
<body>
    <div class="container-fluid">
        <div class="row flex-nowrap">
                <div class="col-auto col-md-3 col-xl-2 d-flex flex-column align-items-center align-items-sm-start px-3 pt-2 min-vh-100 bg-light vh-100">
                    <a href="/" class="w-100 link-dark d-flex align-items-center text-decoration-none">
                        <span class="w-100 text-center fs-4 d-none d-sm-inline">Blackbox CMS</span>
                    </a>
                    <hr class="dropdown-divider w-100">
                    <ul class="flex-nowrap w-100 overflow-auto nav nav-pills flex-column mb-sm-auto mb-0 align-items-center align-items-sm-start" id="menu">
                        <li>
                            <a href="#submenu1" data-bs-toggle="collapse" class="nav-link px-0 align-middle">
                                <span class="ms-1 d-none d-sm-inline">Tables</span>
                            </a>
                            <ul class="collapse show nav ms-1 js-tables" id="submenu1" data-bs-parent="#submenu1">
                            </ul>
                        </li>
                        <li>
                            <a href="#submenu2" data-bs-toggle="collapse" class="nav-link px-0 align-middle">
                                <span class="ms-1 d-none d-sm-inline">Tables</span>
                            </a>
                            <ul class="collapse show nav flex-column" id="submenu2" data-bs-parent="#submenu2">
                                @*@foreach (var table in Model._tables)
                                {
                                    <li class="nav-item w-100">
                                        <a href="#" class="nav-link link-dark">

                                            @table.TABLE_NAME
                                        </a>
                                    </li>
                                }*@
                            </ul>
                        </li>
                    </ul>
                    <hr class="dropdown-divider w-100">
                    <div class="dropdown pb-2 pt-1">
                        <a href="#" class="d-flex align-items-center link-dark text-decoration-none dropdown-toggle" id="dropdownUser1" data-bs-toggle="dropdown" aria-expanded="false">
                            <img src="https://github.com/mdo.png" alt="hugenerd" width="30" height="30" class="rounded-circle me-2">
                            <strong>Steven</strong>
                        </a>
                        <ul class="dropdown-menu text-small shadow" aria-labelledby="dropdownUser1">
                            <li><a class="dropdown-item" href="#">New project...</a></li>
                            <li><a class="dropdown-item" href="#">Settings</a></li>
                            <li><a class="dropdown-item" href="#">Profile</a></li>
                            <li>
                                <hr class="dropdown-divider">
                            </li>
                            <li><a class="dropdown-item" href="#">Sign out</a></li>
                        </ul>
                    </div>
                </div>
            <div class="col py-3">
                @RenderBody()
            </div>
        </div>
    </div>


<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/Layout.js" asp-append-version="true"></script>
    <script src="~/js/sidebars.js" type="text/javascript"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
